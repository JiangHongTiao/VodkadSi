{

  "manifest_version": 2,
  "name": "VodkaďSi?",
  "version": "1.0",
  "description": "Odkrýváme dezinformace a chytáme motýle.",
  "permissions": [ "tabs", "http://*/*", "contextMenus", "storage" ],
  "icons":{
    "16":"icons/poop16.png",
    "48":"icons/poop48.png",
    "128":"icons/poop128.png"
  },
  "web_accessible_resources": ["icons/butterfly.png", "icons/warning.png"],
  "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action" : {
  	"default_icon" : "icons/poop16.png",
  	"default_title": "Tu si vodkaď",
  	"default_popup" : "options.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery.js", "lists.js", "base.js"],
      "css": ["fb.css"]
    },
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["jquery.js", "lists.js", "base.js"],
      "css": ["twitter.css"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["lists.js", "checkurl.js"],
      "css": ["site.css"]
    }
  ]

}
